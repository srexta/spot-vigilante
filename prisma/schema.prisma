// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Submission {
  id          String   @id @default(cuid())
  title       String
  description String?
  location    String
  spottedAt   DateTime
  videoUrl    String   // Made mandatory
  images      String[] // Array of image URLs - made mandatory
  status      SubmissionStatus @default(PENDING)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("submissions")
}

model RateLimit {
  id        String   @id @default(cuid())
  ipAddress String
  action    String   // 'submission', etc.
  count     Int      @default(1)
  windowStart DateTime @default(now())
  createdAt DateTime @default(now())
  
  @@unique([ipAddress, action, windowStart])
  @@map("rate_limits")
}

enum SubmissionStatus {
  PENDING
  APPROVED
  REJECTED
  INVESTIGATING
}